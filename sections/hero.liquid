<sectio class="inner-hero-section">
    {% if section.setting.image != blanck %}
        <img src="{{ section.settings.image | img_url }}" alt="">
    {% else %}
        {% capture current %}{% cycle 1,2 %}{% endcapture %}
        {{ 'lifestyle-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
    <dev class="container py-5">
        <div class="row">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1>{{ section.settings.title }}</h1>
                {{ section.settings.description }}
                <a href="{{ section.settings.button_link }}" class="btn btn-secondary">{{ section.settings.button_lable }}</a>
            </div>
        </div>
    </dev>
</sectio>


{% schema %}
{
    "name" : "Hero",
    "class" : "hero-section",
    "settings" : [
        {
            "type" : "image_picker",
            "id" : "image",
            "label" : "Heading Background Title"
        },
        {
            "type" : "text",
            "id" : "title",
            "default" : "Example Heading",
            "label" : "Heading Title"
        },
        {
            "type" : "text",
            "id" : "button_lable",
            "default" : "button",
            "label" : "Heading button lable"
        },
        {
            "type" : "richtext",
            "id" : "description",
            "default" : "<p>Example Paregraph</p>",
            "label" : "Heading Title"
        },
        {
            "type" : "url",
            "id" : "button_link",
            "label" : "Heading button link"
        }
    ],
    "presets" : [
        {
            "category" : "Hero",
            "name" : "Simple Hero"
        }
    ]

}
{% endschema %}